import java.util.Arrays;

public class SecondLargestElement {

    public static int findSecondLargest(int[] array) {
        if (array == null  array.length < 2) {
            throw new IllegalArgumentException("Массив должен содержать как минимум два элемента");
        }
        
        int largest = Integer.MIN_VALUE;
        int secondLargest = Integer.MIN_VALUE;
        
        for (int num : array) {
            if (num > largest) {
                secondLargest = largest;
                largest = num;
            } else if (num > secondLargest && num != largest) {
                secondLargest = num;
            }
        }
        
        if (secondLargest == Integer.MIN_VALUE) {
            throw new IllegalArgumentException("В массиве нет второго уникального максимального элемента");
        }
        
        return secondLargest;
    }
    
    // Альтернативное решение с сортировкой
    public static int findSecondLargestAlternative(int[] array) {
        if (array == null  array.length < 2) {
            throw new IllegalArgumentException("Массив должен содержать как минимум два элемента");
        }
        
        // Создаем копию чтобы не менять исходный массив
        int[] sortedArray = Arrays.copyOf(array, array.length);
        Arrays.sort(sortedArray);
        
        // Ищем первый элемент с конца, который меньше максимального
        int max = sortedArray[sortedArray.length - 1];
        for (int i = sortedArray.length - 2; i >= 0; i--) {
            if (sortedArray[i] != max) {
                return sortedArray[i];
            }
        }
        
        throw new IllegalArgumentException("В массиве нет второго уникального максимального элемента");
    }

    public static void main(String[] args) {
        int[] testArray1 = {12, 35, 1, 10, 34, 1};
        int[] testArray2 = {10, 10, 10};
        int[] testArray3 = {5, 2};
        
        System.out.println("Тест 1: " + Arrays.toString(testArray1));
        System.out.println("Второй по величине: " + findSecondLargest(testArray1));
        System.out.println("Альтернативный метод: " + findSecondLargestAlternative(testArray1));
        System.out.println();
        
        System.out.println("Тест 2: " + Arrays.toString(testArray2));
        try {
            System.out.println("Второй по величине: " + findSecondLargest(testArray2));
        } catch (IllegalArgumentException e) {
            System.out.println("Ошибка: " + e.getMessage());
        }
        System.out.println();
        
        System.out.println("Тест 3: " + Arrays.toString(testArray3));
        System.out.println("Второй по величине: " + findSecondLargest(testArray3));
    }
}
